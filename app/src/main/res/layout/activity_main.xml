<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tank.testingfirstapp.MainActivity">

    <TextView
        android:layout_width="352dp"
        android:layout_height="38dp"
        android:text="Question "
        android:id="@+id/question_title_text_view"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="16dp" />

    <Button
        android:text="Submit"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:id="@+id/submit_button"
        app:layout_constraintTop_toTopOf="@+id/multiple_choice_answers_recycler_view"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/multiple_choice_answers_recycler_view" />

    <TextView
        android:text="QuestionText"
        android:layout_width="352dp"
        android:layout_height="94dp"
        android:id="@+id/question_content_text_view"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/question_title_text_view"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/multiple_choice_answers_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/question_content_text_view"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/submit_button"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        android:layout_marginBottom="16dp" />

</android.support.constraint.ConstraintLayout>
